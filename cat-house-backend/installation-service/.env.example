# Installation Service Configuration

# Service Settings
SERVICE_NAME=Installation Service
DEBUG=True
PORT=8003
ENVIRONMENT=development

# Database (Shared Neon PostgreSQL)
# Note: SSL is configured in connect_args, not in URL
# Get these credentials from GitHub Secrets or AWS Secrets Manager in production
DATABASE_URL=postgresql+asyncpg://USERNAME:PASSWORD@HOST/DATABASE

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","https://app.gamificator.click"]

# Encryption
ENCRYPTION_KEY=dev-encryption-key-32-chars-long-change-in-production

# Connection Pooling (installation-service allocation)
POOL_SIZE=2
MAX_OVERFLOW=1