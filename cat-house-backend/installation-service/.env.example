# Installation Service Configuration

# Service Settings
SERVICE_NAME=Installation Service
DEBUG=True
PORT=8003
ENVIRONMENT=development

# Database (Shared Neon PostgreSQL)
# Note: SSL is configured in connect_args, not in URL
# For production: Set via GitHub Secrets
DATABASE_URL=postgresql+asyncpg://user:password@host.region.aws.neon.tech/database

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","https://app.gamificator.click"]

# Encryption
# For production: Set via GitHub Secrets (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your-encryption-key-exactly-32ch

# Connection Pooling (installation-service allocation)
POOL_SIZE=2
MAX_OVERFLOW=1
