# Auth Service Configuration

# Service Settings
SERVICE_NAME=Auth Service
DEBUG=True
PORT=8005
ENVIRONMENT=development

# Database (Shared Neon PostgreSQL)
# Note: asyncpg uses ssl='require' in connect_args, not sslmode in URL
# For production: Set via GitHub Secrets
DATABASE_URL=postgresql+asyncpg://user:password@host.region.aws.neon.tech/database

# Migrations (ONLY auth-service needs this)
# psycopg2 uses sslmode in URL
# For production: Set via GitHub Secrets
MIGRATION_DATABASE_URL=postgresql://user:password@host.region.aws.neon.tech/database?sslmode=require

# Authentication
# For production: Set via GitHub Secrets (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-required
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","https://app.gamificator.click"]

# Connection Pooling (auth-service allocation)
POOL_SIZE=2
MAX_OVERFLOW=1
